<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="32dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_orderExam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Câu 1:"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_contentQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:text="Trong các khái niệm dưới đây, dải phân cách được hiểu như thế nào là đúng?"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/tv_orderExam"
            app:layout_constraintTop_toTopOf="parent"></TextView>
        <TextView
            android:id="@+id/tv_ans1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1, Là bộ phận của đường để ngăn cách không cho các loại xe vào những nơi không được phép"
            android:textColor="@color/black"
            android:layout_margin="3dp"
            app:layout_constraintTop_toBottomOf="@id/tv_contentQuestion"></TextView>
        <TextView
            android:id="@+id/tv_ans2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1, Là bộ phận của đường để ngăn cách không cho các loại xe vào những nơi không được phép"
            android:textColor="@color/black"
            android:layout_margin="3dp"
            app:layout_constraintTop_toBottomOf="@id/tv_ans1"></TextView>
        <TextView
            android:id="@+id/tv_ans3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1, Là bộ phận của đường để ngăn cách không cho các loại xe vào những nơi không được phép"
            android:textColor="@color/black"
            android:layout_margin="3dp"
            app:layout_constraintTop_toBottomOf="@id/tv_ans2"></TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>