<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardCornerRadius="32dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_height="77dp">

    <TextView
        android:visibility="gone"
        android:id="@+id/textDeleteRight"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:textColor="#fff"
        android:text="Xóa"
        android:gravity="right|center_vertical"
        android:textSize="13dp"
        android:drawableRight="@drawable/ic_baseline_delete_24"
        android:background="#ff1744"
        />

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:id="@+id/foregroundView"
       android:layout_height="match_parent">
       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:id="@+id/cl_bg"
           android:background="@drawable/background_custom_four_corner_red"></androidx.constraintlayout.widget.ConstraintLayout>

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_marginLeft="16dp"
           android:background="@drawable/background_custom_four_corner_white">

           <TextView
               android:id="@+id/tv_nameOfExam"
               android:layout_width="wrap_content"
               android:layout_height="0dp"
               android:text="Đề số 1"
               android:textColor="@color/black"
               android:textStyle="bold"
               android:gravity="center"
               android:layout_marginLeft="20dp"
               app:layout_constraintBottom_toTopOf="@id/tv_descriptionExam"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintTop_toTopOf="parent"></TextView>

           <TextView
               android:id="@+id/tv_descriptionExam"
               android:layout_width="wrap_content"
               android:layout_height="0dp"
               app:layout_constraintLeft_toLeftOf="@id/tv_nameOfExam"
               app:layout_constraintTop_toBottomOf="@id/tv_nameOfExam"
               app:layout_constraintBottom_toBottomOf="parent"
               android:text="25 câu/19 phút"
               android:gravity="center"
               ></TextView>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="0dp"
               android:id="@+id/tv_doExam"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintTop_toTopOf="@id/tv_nameOfExam"
               app:layout_constraintBottom_toBottomOf="@id/tv_descriptionExam"
               android:layout_marginRight="20dp"
               android:text="LÀM BÀI"
               android:gravity="center"
               android:textColor="#38D63F"
               android:textStyle="bold"
               android:drawableRight="@drawable/ic_baseline_chevron_right_24"
               ></TextView>
       </androidx.constraintlayout.widget.ConstraintLayout>
   </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>