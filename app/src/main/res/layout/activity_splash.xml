<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cl_splash"
    android:background="@drawable/gradient_bg_splash_activity"
    tools:context=".view.SplashActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_leftOfLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3"></androidx.constraintlayout.widget.Guideline>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_rightOfLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7"></androidx.constraintlayout.widget.Guideline>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_topOfLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35"></androidx.constraintlayout.widget.Guideline>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_botOfLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65"></androidx.constraintlayout.widget.Guideline>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/logo"
        android:id="@+id/img_logo"
        app:layout_constraintBottom_toBottomOf="@id/gl_botOfLogo"
        app:layout_constraintLeft_toLeftOf="@id/gl_leftOfLogo"
        app:layout_constraintRight_toRightOf="@id/gl_rightOfLogo"
        app:layout_constraintTop_toTopOf="@id/gl_topOfLogo"></ImageView>
</androidx.constraintlayout.widget.ConstraintLayout>